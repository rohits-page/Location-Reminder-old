<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutScrollContainer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal|center"
    android:background="@drawable/border"
    android:soundEffectsEnabled="true" >

    <RelativeLayout
        android:id="@+id/layoutReminderComponentContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/Light_Gray"
        android:gravity="center_vertical"
        android:padding="0dp" >

        <RelativeLayout
            android:id="@+id/headerArea"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/LIGHT_BLACK"
            android:padding="4dp"
            android:paddingBottom="2dp" >

            <RelativeLayout
                android:id="@+id/innerHeaderArea"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/Light_Gray"
                android:padding="2dp" >

                <TextView
                    android:id="@+id/lblAboutActivityName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="@string/activity_about_name"
                    android:textColor="@color/White"
                    android:textSize="20dp"
                    android:textStyle="bold" >
                </TextView>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mainControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerArea"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:background="@color/LIGHT_BLACK"
            android:padding="4dp" >

            <RelativeLayout
                android:id="@+id/box1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/headerArea"
                android:layout_below="@id/headerArea"
                android:layout_gravity="center"
                android:background="@color/Light_Gray"
                android:padding="2dp" >

                <TextView
                    android:id="@+id/txtAbout"
                    android:layout_alignParentTop="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:text="@string/MSG_About"
                    android:autoLink="email"
                    android:textColor="@color/Brown"
                    android:layout_marginBottom="10dp"
                     android:gravity="center_vertical|fill">
                </TextView>
                <Button
                    android:id="@+id/btnOK"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAbout"
                    android:layout_marginBottom="2px"
                    android:layout_marginTop="2px"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="OK"
                    android:textStyle="bold" >
                </Button>
            </RelativeLayout>
            <!-- save_button_ring -->
        </RelativeLayout>
        <!-- main_controls -->
    </RelativeLayout>

</RelativeLayout>